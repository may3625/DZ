# Configuration de sécurité pour Dalil.dz
# Copiez ce fichier vers .env et remplissez les valeurs

# Configuration Admin
ADMIN_EMAIL=admin@dalil.dz
ADMIN_PASSWORD=MotDePasseSecurise123!

# Configuration Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Configuration de sécurité
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_32_chars
CSRF_SECRET=your_csrf_secret

# Configuration OCR
OCR_API_KEY=your_ocr_api_key
AI_API_KEY=your_ai_api_key

# Configuration de base de données locale
LOCAL_DB_URL=postgresql://username:password@localhost:5432/dalil_dz
LOCAL_DB_PASSWORD=your_local_db_password

# Configuration de sécurité avancée
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000

# Configuration de monitoring
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true
ENABLE_SECURITY_LOGS=true